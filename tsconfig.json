{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist/esm",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noImplicitAny": true
  }
}
