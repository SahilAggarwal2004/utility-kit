{
  "compilerOptions": {
    "target": "es2016",
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "noImplicitAny": true
  },
  "include": ["src"]
}
